<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:background="@color/green_4fbfa5"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <ImageView
            android:id="@+id/iv_logo_main_activity"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:src="@drawable/logo_grupo_zap"
            android:contentDescription="@string/logo_grupo_zap"/>

    <TextView
            android:id="@+id/tv_subtitulo_main_activity"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/title_main_activity"
            android:textColor="@color/white_FFFFFF"
            android:textSize="@dimen/max_font_size"
            android:layout_marginTop="24dp"
            android:layout_marginStart="24dp"
            android:layout_marginEnd="24dp"
            app:layout_constraintTop_toBottomOf="@+id/iv_logo_main_activity"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

    <ImageButton
            android:id="@+id/ib_vivareal_main_activity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAllCaps="false"
            android:paddingStart="24dp"
            android:paddingEnd="24dp"
            android:src="@drawable/ic_logo_vivareal"
            android:layout_marginTop="24dp"
            android:layout_marginStart="24dp"
            android:layout_marginEnd="24dp"
            android:background="@drawable/shape_botao_vivareal_logo"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_subtitulo_main_activity"/>

    <ImageButton
            android:id="@+id/ib_zap_main_activity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAllCaps="false"
            android:paddingStart="24dp"
            android:paddingEnd="24dp"
            android:src="@drawable/logo_zap"
            android:layout_marginTop="24dp"
            android:layout_marginStart="24dp"
            android:layout_marginEnd="24dp"
            android:background="@color/white_FFFFFF"
            app:layout_constraintStart_toEndOf="@+id/ib_vivareal_main_activity"
            app:layout_constraintTop_toBottomOf="@+id/tv_subtitulo_main_activity"/>

</android.support.constraint.ConstraintLayout>